<?xml version="1.0" encoding="utf-8"?>
<com.afollestad.polar.views.insets.WindowInsetsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/circular_reveal_bg_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?window_background_cards"
        android:transitionName="@string/transition_name_circular_reveal"
        tools:ignore="UnusedAttribute" />

    <android.support.v7.widget.RecyclerView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:clipToPadding="false"
        android:padding="@dimen/grid_margin"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        app:layout_windowInsets="bottom|top" />

    <com.afollestad.polar.views.insets.WindowInsetsLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:transitionName="@string/transition_name_circular_reveal"
        tools:ignore="UnusedAttribute">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorPrimary"
            android:elevation="@dimen/toolbar_elevation"
            app:layout_windowInsets="top">

            <include layout="@layout/toolbar" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="?toolbar_shadow"
            app:layout_windowInsets="top"
            app:layout_windowInsetsUseMargin="true" />

    </com.afollestad.polar.views.insets.WindowInsetsLinearLayout>

</com.afollestad.polar.views.insets.WindowInsetsFrameLayout>